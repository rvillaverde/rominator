- # Expects 2 parameters: new_node, last_node
#form-content
  = simple_form_for new_node do |f|
    .fields
      = f.input :value, label: "En qu√© se diferencian su personaje y '#{@last_node.value}'?", input_html: { size: 40 }
      
      = f.simple_fields_for :true_path do |true_path_form|
        = true_path_form.input :value, label: "Respuesta si", input_html: { size: 40 }

      = f.simple_fields_for :false_path do |false_path_form|
        = false_path_form.input :value, label: "Respuesta no", input_html: { size: 40 }

    .submit-item
      = f.submit "Guardar personaje!"